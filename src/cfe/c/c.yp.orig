// 6.7.3
%type<dspecs> type_qualifier:
    qual       { $$ = New_DSpecs( $qual ) }

    // EXT: Our extension
    //
    // attribute like _far, _near, _cdecl, _pascal, or whatever the
    // compiler/platform supports are specified this way.
    //
  | ATTR '(' any_identifier ')'           {TODO}
  ;

%type<token> qual:
    C_CONST
  | C_RESTRICT
  | C_VOLATILE
  ;


// 6.7.4
%type<dspecs> function_specifier:
    C_INLINE           {TODO}
  ;

// 6.7.5

%type<sym> declarator( $<typ>typ ): 
    pointer_opt( $typ ) direct_declarator( $pointer_opt ) 
      {
        $$ = $direct_declarator;
      }
  ;

%type<typ> direct_declarator_tail( $<typ>typ ):
    /* empty */
      {
        $$ = $typ;
      }
  | '[' type_qualifier_list_opt assignment_expression_opt ']' direct_declarator_tail( $typ )
      {
        $$ = Type_MakeArray( 
                $direct_declarator_tail,
                $type_qualifier_list_opt,
                $assignment_expression_opt,
                false
             );
      }
  | '[' C_STATIC type_qualifier_list_opt assignment_expression ']' direct_declarator_tail( $typ )  
      {
        $$ = Type_MakeArray( 
                $direct_declarator_tail,
                $type_qualifier_list_opt,
                $assignment_expression,
                true
             );
      }
  | '[' GenQual_type_qualifier_list C_STATIC assignment_expression ']' direct_declarator_tail( $typ )      
      {
        $$ = Type_MakeArray( 
                $direct_declarator_tail,
                $GenQual_type_qualifier_list,
                $assignment_expression,
                true
             );
      }
  | '[' type_qualifier_list_opt '*' ']' direct_declarator_tail( $typ )
      {
        $$ = Type_MakeArray( 
                $direct_declarator_tail,
                $type_qualifier_list_opt,
                Ast( ast_unspecifiedVariableArraySize, &@3 ),
                false
             );
      }
  | '(' parameter_type_list ')' direct_declarator_tail( $typ )
      {
        TODO1( parameters );
        $$ = Type_MakeFunction ( $direct_declarator_tail );
      }
  | '(' identifier_list_opt ')' direct_declarator_tail( $typ )
      {
        TODO1( parameters );
        $$ = Type_MakeFunction ( $direct_declarator_tail );
      }
  ;

//--------------------------------------------------------------------------
// Name         left_bra_CopyTyp
//
// The "function" matches a left bracket '(' and returns $<typ>NULL.
// 
// The purpose is to avoid parse conflicts in cases when we have to 
// generate the NULL typ after an open bracket. 
//
// The grammar originally has these rules somewhere:
//
//   a = '(' declarator ')'
//   b = '(' declarator2 ')'
//
// declarator and declarator2 need a NULL $typ parameter .
// So, we modify the grammar:
//   a = '(' Push0(NULL) declarator ')'
//   b = '(' Push0(NULL) declarator2 ')'
// This however causes parse conflicts, which leads us to the current:
//   a = left_bra_NullTyp declarator ')'
//   b = left_bra_NullTyp declarator2 ')'
//--------------------------------------------------------------------------
%type<typ> left_bra_NullTyp:
    '(' 
      { $$ = NULL }
  ;

%type<sym> direct_declarator( $<typ>typ ):
    any_identifier direct_declarator_tail( $typ ) 
      { 
        $$ = New_TSymbol( $any_identifier, $direct_declarator_tail );
      }
  | left_bra_NullTyp declarator( $left_bra_NullTyp ) ')' direct_declarator_tail( $typ )
      {
        $$ = Symbol_ChainType( $declarator, $direct_declarator_tail );
      }
  ;

/*
  declarator1 doesn't allow a TYPENAME in brackets.
  It is used only for parameter declaration where a TYPENAME in brackets
  would mean a function header.
  To achieve this goal, it redirects to declarator2 after the first bracket.
*/
%type<sym> declarator1( $<typ>typ ): 
    pointer_opt( $typ ) direct_declarator1( $pointer_opt )
      {
        $$ = $direct_declarator1;
      }
  ;

%type<sym> direct_declarator1( $<typ>typ ):
    any_identifier direct_declarator_tail( $typ ) 
      { 
        $$ = New_TSymbol( $any_identifier, $direct_declarator_tail );
      }
  | left_bra_NullTyp declarator2( $left_bra_NullTyp ) ')' direct_declarator_tail( $typ )
      {
        $$ = Symbol_ChainType( $declarator2, $direct_declarator_tail );
      }
  ;

%type<sym> declarator2( $<typ>typ ): 
    pointer_opt( $typ ) direct_declarator2( $pointer_opt )
      {
        $$ = $direct_declarator2;
      }
  ;

%type<sym> direct_declarator2( $<typ>typ ):
    identifier  direct_declarator_tail( $typ ) 
      { 
        $$ = New_TSymbol( $identifier, $direct_declarator_tail );
      }
  | left_bra_NullTyp declarator2( $left_bra_NullTyp ) ')'  direct_declarator_tail( $typ ) 
      {
        $$ = Symbol_ChainType( $declarator2, $direct_declarator_tail );
      }
  ;


//--------------------------------------------------------------------------
// Name         qual_pointer
//
// Allocate a qualified pointer and make it point to $typ
//--------------------------------------------------------------------------
%type<typ> qual_pointer( $<typ>typ ): 
    '*' type_qualifier_list_opt 
      { 
        $$ = Type_MakePointer( $typ, $type_qualifier_list_opt );
      }
  ;

%type<typ> pointer( $<typ>typ ): 
    qual_pointer( $typ )           
  | pointer( $typ ) qual_pointer( $pointer )  { $$ = $qual_pointer }
  ;

%type<typ> pointer_opt( $<typ>typ ): 
    /*empty*/             { $$ = $typ }
  | pointer( $typ )               
  ;

%type<dspecs> type_qualifier_list:
    type_qualifier
  | type_qualifier_list type_qualifier   { $$ = DSPECS_COMBINE( $type_qualifier_list, &$type_qualifier ) }
  ;

%type<typ> GenQual_type_qualifier_list:
    type_qualifier_list    { $$ = DSPECS_GENQUAL( &$type_qualifier_list ) }
  ;


%type<typ> type_qualifier_list_opt:
    /*empty*/              { $$ = NULL }
  | GenQual_type_qualifier_list
  ;


